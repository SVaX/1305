<Window x:Class="DemoAppAgain.Windows.ChangePriorityModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoAppAgain.Windows"
        mc:Ignorable="d"
        Title="Смена приоритета" MinHeight="250" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Какой приоритет установить?" Grid.Row="0"/>
        <TextBox Grid.Row="1" Name="priorityTextBox"/>
        <Button HorizontalAlignment="Left" Grid.Row="2" Content="Подтвердить" IsDefault="True" x:Name="accept" Click="accept_Click"/>
        <Button HorizontalAlignment="Right" Grid.Row="2" Content="Отмена" IsCancel="True"/>
    </Grid>
</Window>
